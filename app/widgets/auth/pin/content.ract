<div class="auth__pin">
  <label>
    {{#userExists}}
      Enter your pin:
    {{/userExists}}
    {{^userExists}}
      Set a pin for quick access:
    {{/userExists}}
    <input id="setPin" type="password" pattern="[0-9]*" placeholder="4-digit pin" value="{{pin}}" on-enter='enter-pin' autofocus/>
  </label>
</div>

