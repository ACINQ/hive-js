{{#visible}}

<div class="overlay--flash" on-click="cancel" intro-outro="fade">

  <div id="container" class="flash" intro-outro="fadeNscale">

    <div class="flash__content">
      <img class="flash__icon" src="/assets/img/{{icon}}.png" />
      <h2 class="flash__heading {{type}}">{{title}}</h2>
      <p class="flash__message">{{message}}</p>
    </div>

  </div>

</div>

{{/visible}}
