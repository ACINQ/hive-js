{{#visible}}

  <div id="container" class="error" intro-outro="fadeNscale" on-click="cancel">

    <div class="error__content">
      <img class="error__icon" src="/assets/img/{{icon}}.png" />
      <h2 class="error__heading">{{title}}</h2>
      <p class="error__message">{{message}}</p>
    </div>

  </div>

{{/visible}}
