<ul>
  {{#transactions}}
    <li>
      <i class="fa fa-bitcoin"></i>
      <i class="{{directionClass(direction)}}"></i>
      <span>{{directionVerb(direction)}}</span>
      <b>{{amount}}</b>

      {{#toAddress}}
        <span>to</span>
        <b>{{toAddress}}</b>
      {{/toAddress}}

      <span>{{formatTimestamp(timestamp)}}</span>
    </li>
  {{/transactions}}
</ul>
